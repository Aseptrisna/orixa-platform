# =============================================
# ORIXA Docker Environment Variables
# Copy this file to .env and update values
# =============================================

# MongoDB
MONGO_ROOT_USERNAME=orixa
MONGO_ROOT_PASSWORD=your_secure_password_here

# JWT Secrets (minimum 32 characters each)
JWT_SECRET=your-jwt-secret-minimum-32-characters-here-change-this
JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-characters-here-change
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (your domain)
CORS_ORIGIN=https://yourdomain.com

# API URL (for frontend build)
VITE_API_URL=https://api.yourdomain.com
